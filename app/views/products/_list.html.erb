<div id="filterrific_results">
  <div class="card">
    <table class="table table-hover table-sm">
      <thead>
        <tr>
          <th><%= Product.human_attribute_name(:name) %></th>
          <th><%= Product.human_attribute_name(:code) %></th>
          <th><%= Product.human_attribute_name(:cost_price) %></th>
          <th><%= Product.human_attribute_name(:sale_price) %></th>
          <th><%= Product.human_attribute_name(:store_price) %></th>
          <th class="text-center" style="width: 1%;"><%= t :action %></th>
        </tr>
      </thead>
      <tbody id="products">
        <%=  simple_form_for(Product.new, :url => products_path(format: :csv),
          :action => :index,
          :method => :get,
          html: { id: :csv_form }) do |form| %>
          
          <%= render @products, :f => form  %>
        <% end%>
      </tbody>
    </table>
  </div>
</div>