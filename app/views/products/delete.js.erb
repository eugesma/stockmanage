// Style modal
$('.modal-header').addClass('bg-danger');
$('.modal-header').addClass('text-white');


// Add the dialog title
$('#dialog h5').html("<i class='fa fa-trash'></i> <%= t("actions.trash") %>");

// Render the edit form
$('.modal-body').html("<%= t("messages.product.trash", name: @product.name )%>");

// Add form button
$('.modal-footer').html(
  "<button type='button' class='btn btn-default pull-left' data-dismiss='modal'><%= t("actions.back") %></button>"+
  "<a data-remote='true' data-method='delete' href='/products/<%= @product.id %>>' data-dismiss='modal' class='btn commit btn-danger pull-right' rel='nofollow'><%= t("actions.confirm") %></a>"
);

// Show the dynamic dialog
$('#dialog').modal("show");

// Remove style
$('#dialog').on('hidden.bs.modal', function () {
  $('.modal-header').removeClass('bg-danger');
  $('.modal-header').removeClass('text-white');
});
