<!DOCTYPE html>
<html>
  <head>
    <title>Stockmanage</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag 'LogoStockManage.png' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="d-flex" id="wrapper">
      <!-- Sidebar -->
      <% if user_signed_in? %>
        <%= render 'layouts/side_navigation' %>
      <% end %>

      <!-- Page Content -->
      <div id="page-content-wrapper">
        <% if user_signed_in? %>
          <!-- Navbar -->
          <%= render 'layouts/navigation' %>
        <% end %>
        <div class="mt-3 container<%= yield :container %>">
          
          <!-- Flash message -->
          <div id="flash_messages" class="mx-auto d-block">
            <%= render "layouts/flash_notices" %>
          </div>

          <!-- Modal -->
          <%= render "shared/dialog" %>

          <!-- Main yield -->
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
